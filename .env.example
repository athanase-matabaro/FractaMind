# FractaMind Environment Configuration
# Copy this file to .env and customize as needed

# Feature Flags
# Set to 'false' to disable workspace feature
VITE_FEATURE_WORKSPACE=true

# Set to 'false' to disable contextual links and suggestions (Phase 6)
VITE_FEATURE_CONTEXTUAL_LINKS=true

# AI Configuration
# Options: 'live' (use Chrome Built-in AI) | 'mock' (use deterministic fallbacks)
# Mock mode is useful for testing, development without AI, or when API is unavailable
VITE_AI_MODE=live

# AI operation timeout in milliseconds (default: 600000 = 600 seconds / 10 minutes)
# Extended to 10 minutes for debugging live AI mode and model warm-up
# Reduce to 30000 (30s) for production use after debugging
VITE_AI_TIMEOUT_MS=600000

# Polling timeout for model availability checks (milliseconds)
VITE_AI_POLL_MAX_MS=600000

# Contextualization & Linking Configuration (Phase 6)
# Number of top link suggestions to return
VITE_CONTEXT_SUGGEST_TOPK=8

# Cosine similarity threshold for automatic link candidates (0.0-1.0)
VITE_LINK_SIM_THRESHOLD=0.78

# Context decay half-life in hours for recency bias
VITE_CONTEXT_HALF_LIFE_HOURS=72

# Maximum batch size for background link processing
VITE_LINK_MAX_BATCH=2000

# Development
VITE_ENABLE_DEBUG_LOGS=false

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false
